<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/linear_layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:text="Search Text:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/textView1"
        android:labelFor="@+id/editText1" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:inputType="text"/>
        </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/dividerVertical"
        style="?android:buttonBarStyle"
        android:layout_marginBottom="2dip"
        android:layout_marginTop="4dip"
        >
    <Button
        android:text="Search Exact"
        android:textSize="12sp"
        android:background="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/button1" />

    <Button
        android:text="Search All"
        android:textSize="12sp"
        android:background="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/button2" />

    <Button
        android:text="Sort A-Z"
        android:textSize="12sp"
        android:background="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/button3" />
    <Button
        android:text="Sort Score"
        android:textSize="12sp"
        android:background="?android:attr/selectableItemBackground"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:id="@+id/button4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?android:attr/dividerVertical"
        style="?android:buttonBarStyle"
        android:layout_marginBottom="4dip"
        android:layout_marginTop="2dip"
        >

        <Button
            android:text="Search Multiword"
            android:textSize="12sp"
            android:background="?android:attr/selectableItemBackground"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/button5" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:textSize="12sp"
            android:entries="@array/minlength_arrays"
            android:prompt="@string/minlength_prompt"
            android:layout_weight="1" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollView1">
        <TextView
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="20dp"
            android:padding="20dp"
            android:id="@+id/textView2" />
    </ScrollView>

</LinearLayout>